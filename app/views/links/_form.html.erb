<%= simple_form_for(@link) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :from_character %>
    <%= f.association :to_character %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :force %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
