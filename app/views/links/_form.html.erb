<%= simple_form_for(@link) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if @not_from_to %>
      <%= f.hidden_field :from_character_id, class: "js-from-node" %>
      <%= f.hidden_field :to_character_id, class: "js-to-node" %>
      <%= hidden_field_tag :from_cerebro, true %>
    <% else %>
      <%= f.association :from_character %>
      <%= f.association :to_character %>
    <% end %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :force %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn" %>
  </div>
  <% if !f.object.new_record? %>
    <%= link_to 'Destroy', f.object, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
  <% end %>
<% end %>
